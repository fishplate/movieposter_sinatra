<div class="container">
  <div class="row">
    <div class="span8 offset2">
      <% if @results.empty? %>
        <h1 class="resultTitle">sorry we can't find anything for that movie.</h1>
        <a href="/" class ='backButton'> Back To Search</a>
      <% end %>
       
      <% @results.each do |a| %>
        <h1 class="resultTitle"><%= a["collectionName"] %></h3>
        <div class="thumbnail">
          <img src=<%= a["artworkUrl100"].gsub("100x100-75.jpg", "400x400-75.jpg") %>>
          <%= will_paginate @results, :previous_label => "&laquo; Prev", :next_label => "Next &raquo;", :inner_window => 1, :outer_window => 1, :renderer => BootstrapPagination::Sinatra %>
        </div>
        <a href="/" class ='backButton'> Back To Search</a>
      <% end %>
   </div>
 </div>
</div>